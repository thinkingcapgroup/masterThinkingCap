<main id='game'>
  <article class='wrapper'>
    <header class='thinking-cap-header'>
      <h1 class='thinking-cap-title'>{{content.appTitle}}</h1>
    </header>
<section>
<div id = "gameArea" >
  <img id = 'holo' src = '../../img/holopad-topbar.png' width = '1200' height = '738' >
  <br>
  <img id = 'holo-corner' src = '../../img/holopad-corner.png' width = '1200' height = '738' >
  <div id="contentContainer">
  <div id = "gameContents">

  <div id = "playerInfo">
      <div id="remainingHours"></div>
      <div id="remainingDays"></div>
  </div>
  
  <div id="lowerContent">
    <div id="loadContainer">
      <h2>Loading Game...</h2>
      <progress id="loadBar" value="0" max="100"></progress>
    </div>
  <div id = "gameInfo">

  </div>
  
  
  <div id = "questions" style = "display:none;">
  <br>
    <p>What percentage of the sample is for you? <input type = "text" id = "q1">%</p>
