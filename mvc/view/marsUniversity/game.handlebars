    <p>What percentage of the samplenext is against you? <input type = "text" id = "q3">%</p>
    <p>What percentage of the population is the sample? <input type = "text" id = "q4">%</p>
    <button id = "answerButton" >Submit Answers</button>
  
  
  </div>
  
  <div id = "userAction">
    <div id="leftDisplay">

        <div id = "choices" style = "display:none;">
            <h3 id="infoText"></h3>
            <div id = "LabsChoice" style = "display:none;">

            </div>
            <div id = "GymChoice" style = "display:none;">

            </div>
            <div id = "CommonsChoice" style = "display:none;">

            </div>
            <div id = "CafeChoice" style = "display:none;">

            </div>
            <div id = "LibraryChoice" style = "display:none;">

            </div>

            <div id = "eventInput" style = "display:none;">

            </div>

        </div>
        <div id = "eventInfo" style = "display:none;">
        </div>

      
    </div>
    <div id="rightDisplay">
        <div id = "eventImg" style = "display:none;">
    
        </div>
        <div id = "table" style = "display:none;">
          <table id = "tab" class="sortable">
          <thead id="tableHead">

          </thead>
          <tbody id="pollTable">
          </tbody>
          </table>
        </div>
        <div class = "mapContainer">
          <div id = "map" style = "display:none;">

          </div>
        </div>

    </div>
    
    <div id = "next" style = "display:none;">
    </div>
    
    
    
    

    

    </div>
